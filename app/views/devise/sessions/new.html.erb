<div class="devise_wrapper">
  <div class="form-signin">
    <h2 class="form-signin-heading text-center">Panel Administratora</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "Adres email", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, class: "sr-only" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Hasło" %>
      </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, value="Zapamiętaj mnie" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Zaloguj się", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
