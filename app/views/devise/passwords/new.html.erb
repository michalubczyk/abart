<div class="devise_wrapper">
  <div class="form-signin">
    <h2 class="form-signin-heading text-center">Zapomniałeś hasła?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "Adres email", autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Resetuj hasło", class: "btn btn-lg btn-primary btn-block" %>
      </div>
  <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
